---
interface Props {
  site: string;
  url: string;
}

const { site, url } = Astro.props;
---

<li class="">
  <a
    class="px-3 py-2 block group hover:bg-blue hover:text-white"
    href={url}
    target="_blank"
    ><span class="hidden sm:inline invisible sm:group-hover:visible"
      >{"< "}</span
    ><span class="underline group-hover:no-underline">{site}</span><span
      class="hidden sm:inline invisible sm:group-hover:visible">{" >"}</span
    ></a
  >
</li>
