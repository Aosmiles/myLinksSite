---
import LinkItem from "../components/LinkItem.astro";
import linksJSON from "../data/links.json";

const year = new Date().getFullYear();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Arlin's Links</title>
  </head>
  <body
    class="h-screen flex flex-col font-mono py-10 px-10 container mx-auto max-w-md"
  >
    <header class="">
      <h1 class="text-xl sm:text-3xl text-fuchsia font-extrabold uppercase">
        Arlin's Links &#128397;
      </h1>
    </header>
    <main class="mt-6">
      <ul class="text-lg space-y-2">
        {linksJSON.map((link) => <LinkItem site={link.site} url={link.url} />)}
      </ul>
    </main>
    <footer class="mt-auto">
      <p class="text-sm text-gray">
        Copyright &copy;{year} Arlin Ortiz All Rights Reserved
      </p>
    </footer>
  </body>
</html>
